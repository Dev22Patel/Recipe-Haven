@model IEnumerable<RecipeApplication.Models.Recipe>
@{
    ViewData["Title"] = "My Recipe Collection";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />

<style>
    .recipe-container {
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
        padding: 2rem;
        margin-bottom: 2rem;
    }

    .page-title {
        color: #2c3e50;
        font-weight: 600;
        margin-bottom: 1.5rem;
        position: relative;
        padding-bottom: 0.5rem;
    }

        .page-title:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 60px;
            height: 4px;
            background: #3498db;
            border-radius: 2px;
        }

    .table {
        margin-top: 2rem;
        border: none;
    }

        .table thead th {
            background-color: #f8f9fa;
            border-bottom: 2px solid #e9ecef;
            color: #495057;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.9rem;
            letter-spacing: 0.5px;
            text-align: center;
        }

        .table td {
            vertical-align: middle;
            color: #2c3e50;
            font-size: 0.95rem;
            padding: 1rem;
            text-align: center;
        }

    .btn {
        border-radius: 6px;
        padding: 0.4rem 1.2rem;
        font-weight: 500;
        transition: all 0.2s ease-in-out;
    }

    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 15px; /* Increased space between buttons */
        padding: 0.5rem;
    }

    .action-button {
        min-width: 100px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.5rem 1rem;
        font-size: 0.875rem;
    }

    .btn-primary {
        background-color: #3498db;
        border-color: #3498db;
    }

    .btn-warning {
        background-color: #f39c12;
        border-color: #f39c12;
        color: white;
    }

    .btn-danger {
        background-color: #e74c3c;
        border-color: #e74c3c;
    }

    .btn-success {
        background-color: #2ecc71;
        border-color: #2ecc71;
    }

    .empty-state {
        padding: 4rem;
        text-align: center;
        color: #7f8c8d;
    }

    .btn i {
        margin-right: 0.4rem;
    }

    .create-button {
        margin-top: 2rem;
        text-align: center;
    }

    /* Hover effects */
    .btn-primary:hover {
        background-color: #2980b9;
        border-color: #2980b9;
        transform: translateY(-1px);
    }

    .btn-warning:hover {
        background-color: #e67e22;
        border-color: #e67e22;
        transform: translateY(-1px);
    }

    .btn-danger:hover {
        background-color: #c0392b;
        border-color: #c0392b;
        transform: translateY(-1px);
    }
</style>

<div class="container mt-5">
    <div class="recipe-container">
        <div class="d-flex justify-content-between align-items-center">
            <h2 class="page-title">My Recipe Collection</h2>
            <a href="@Url.Action("Create", "Home")" class="btn btn-success create-button">
                <i class="fas fa-plus"></i> Add New Recipe
            </a>
        </div>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th style="width: 30%">Recipe Name</th>
                    <th style="width: 45%">Description</th>
                    <th style="width: 25%">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var recipe in Model)
                {
                    <tr>
                        <td>
                            <strong>@recipe.Title</strong>
                        </td>
                        <td>
                            @(recipe.Description?.Length > 100 ? recipe.Description.Substring(0, 100) + "..." : recipe.Description)
                        </td>
                        <td>
                            <div class="action-buttons">
                                <a href="@Url.Action("Detail", "Home", new { id = recipe.RecipeId })" class="btn btn-primary action-button">
                                    <i class="fas fa-eye"></i> View
                                </a>
                                <a href="@Url.Action("Edit", "Home", new { id = recipe.RecipeId })" class="btn btn-warning action-button">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a href="@Url.Action("Delete", "Home", new { id = recipe.RecipeId })" class="btn btn-danger action-button">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="3" class="empty-state">
                            <i class="fas fa-book-open fa-3x mb-3"></i>
                            <h5>No Recipes Yet</h5>
                            <p class="text-muted">Start building your collection by adding your first recipe!</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>